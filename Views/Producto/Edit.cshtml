@model PuntoVenta.Datos.Producto

@{
    ViewBag.Title = "Editar producto";
}

<h2>Editar producto</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Producto</legend>

        @Html.HiddenFor(model => model.ProductoId)

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductoNombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductoNombre)
            @Html.ValidationMessageFor(model => model.ProductoNombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductoDescripcion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductoDescripcion)
            @Html.ValidationMessageFor(model => model.ProductoDescripcion)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
